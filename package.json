    "lint": "biome check",
    "test": "vitest run"
  },
  "dependencies": {
    "mathjs": "^14.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "puppeteer": "^24.17.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "puppeteer": "^24.0.0"
  },
  "peerDependenciesMeta": {
    "puppeteer": {
      "optional": true
    }
  },
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
